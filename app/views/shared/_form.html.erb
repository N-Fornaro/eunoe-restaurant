  <%= simple_form_for @booking do |f| %>
    <%= f.input :last_name, label: "Nom", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"}, placeholder: "Doe" %>
    <%= f.input :first_name, label: "Prénom", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"}, placeholder: "John" %>
    <%= f.input :email, label: "Email", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"}, placeholder: "jd@gmail.com" %>
    <%= f.input :phone, label: "Téléphone", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"}, placeholder: "0606060606" %>
    <%= f.input :people, label: "Nombre de couverts", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"} %>
    <%= f.input :date, label: "Date", as: :string, input_html: { class: "dateTime mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm" }%>
    <%= f.input :comment, :as => :text, label: "Commentaire", input_html: { class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm"} %>
    <input type="submit" name="commit" value="Valider la réservation" class="inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 hover:cursor-pointer" data-disable-with="Create Event">
  <% end %>
