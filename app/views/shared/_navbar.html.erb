<header aria-label="Site Header" class="<%= current_page?(root_path) ? 'fixed bg-transparent' : 'sticky bg-black' %> top-0 left-0 right-0 z-20 mb-24">
  <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="md:flex md:items-center md:gap-12">
        <a class="block text-teal-600" href="/">
          <span class="sr-only">Home</span>
          <%= image_tag "logo-white.png", height: "48px", width: "48px" %>
        </a>
      </div>

      <div class="hidden md:block">
        <nav aria-label="Site Nav" role="menu">
          <ul class="flex items-center gap-6 text-sm">
            <li><%= link_to "Accueil", root_path, class: "text-white transition hover:text-white/75" %></li>

            <li><%= link_to "Restaurant", restaurant_path, class: "text-white transition hover:text-white/75" %></li>

            <li><%= link_to "Cuisine", cuisine_path, class: "text-white transition hover:text-white/75" %></li>

            <li><%= link_to "Réservation", new_booking_path, class: "text-white transition hover:text-white/75" %></li>

          </ul>
        </nav>
      </div>

      <div class="flex items-center gap-4">
        <div class="sm:flex sm:gap-4">
          <%= link_to "Réserver", new_booking_path, class: "rounded-md bg-teal-600 px-5 py-2.5 text-sm font-medium text-white shadow" %>
        </div>

        <div class="block md:hidden">
          <button
            class="p-2 text-gray-600 transition bg-gray-100 rounded dropdown-toggle hover:text-gray-600/75"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

</header>
