<div class="flex flex-col items-center justify-center min-w-full min-h-screen gap-8 px-32 py-64 text-white bg-pink-pastel"> <%# Padding to adjust later %>
  <%= link_to root_path do %>
    <%= image_tag "Eunoe_LogoB_crop.png", class: "", width: "120px", alt: "EunoÃ© Restaurant" %>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col items-center justify-center gap-2 form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  wrapper_html: { class: "m-2 flex flex-row min-w-full gap-2 justify-center items-center "},
                  input_html: { autocomplete: "email", class: "rounded-md flex-grow text-black" } %>
      <%= f.input :password,
                  required: false,
                  wrapper_html: { class: "m-2 flex flex-row min-w-full gap-2 justify-center items-center "},
                  input_html: { autocomplete: "current-password", class: "rounded-md flex-grow text-black" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="flex justify-center">
      <%= f.button :submit, "Log in", class: "bg-white rounded-md shadow-md form-actions font-medium transition text-pink-pastel px-4 py-2 hover:scale-110 hover:font-bold" %>
    </div>
  <% end %>

  <%# render "devise/shared/links" %>
</div>
