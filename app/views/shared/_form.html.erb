<%= simple_form_for @booking do |f| %>
  <%= f.input :last_name,
              label: "Nom",
            error_html: { class: "text-black text-base sm:text-xl"},
              label_html:
                { class:"text-black text-base sm:text-xl"},
              input_html:
                { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"},
              placeholder: "Nom" %>
  <%= f.input :first_name,
              label: "Prénom",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              input_html:
                { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"},
              placeholder: "Prénom" %>
  <%= f.input :email,
              label: "Email",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              input_html:
                { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"},
              placeholder: "prenom.nom@gmail.com" %>
  <%= f.input :phone,
              label: "Téléphone",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              input_html:
                { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"},
              placeholder: "0606060606" %>
  <%= f.input :people,
              label: "Nombre de couverts",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              collection: (1..20),
              input_html:
                { class: "my-2 px-6 mt-1 w-32  flex flex-col rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"} %>
  <%= f.input :date,
              placeholder: @booking.starts_at,
              label: "Date (fermé le dimanche soir et le lundi)",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              as: :string,
              input_html:
                { class: "newDateTime my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-lg" }%>
  <%= f.input :starts_at, as: :select, collection: @hours,
              label: "Horaire",
              class: "flex flex-col radio-button",
              form_check_html: { class: "radio-button" },
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              input_html:
                { class: "time my-2 mt-1 px-6 w-32 flex flex-col rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl" } %>
  <%= f.input :comment,
              :as => :text,
              label: "Commentaires (régimes alimentaires, allergies...)",
              label_html:
                { class:"text-black text-base sm:text-xl"},
              error_html: { class: "text-black text-base sm:text-xl"},
              input_html:
                { class: "my-10 mt-1 w-full h-36 rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"} %>
  <%= f.button :submit,
              value: "Valider",
              class: "inline-block px-12 py-3 mb-2 text-base sm:text-xl font-medium text-white border border-none rounded bg-[#b9714f] hover:bg-red-pastel focus:outline-none focus:ring hover:cursor-pointer" %>
<% end %>
