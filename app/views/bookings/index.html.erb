
<div class="container">
  <h1 class="text-3xl font-extrabold sm:text-5xl my-20">Gérez vos réservations</h1>


  <div class="overflow-hidden overflow-x-auto rounded-lg border border-gray-200">
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="sticky inset-y-0 left-0 bg-gray-100 px-4 py-2 text-left">
            <label class="sr-only" for="SelectAll">Select All</label>

            <input
              class="h-5 w-5 rounded border-gray-200"
              type="checkbox"
              id="SelectAll"
            />
          </th>
          <th
            class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900"
          >
            <div class="flex items-center gap-2">
              ID

              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 text-gray-700"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
          </th>
          <th
            class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900"
          >
            <div class="flex items-center gap-2">
              Name

              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 text-gray-700"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
          </th>
          <th
            class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900"
          >
            <div class="flex items-center gap-2">
              Email

              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 text-gray-700"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
          </th>
          <th
            class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900"
          >
            Status
          </th>
          <th class="px-4 py-2"></th>
        </tr>
      </thead>
      <ul>
        <% @booking.each do |booking| %>

            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="sticky inset-y-0 left-0 bg-white px-4 py-2">

                  <input
                    class="h-5 w-5 rounded border-gray-200"
                    type="checkbox"
                    id="Row1"
                  />
                </td>
                <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
                  <%= booking.id %>
                </td>
                <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                  <%= booking.first_name %> <%= booking.last_name %>
                </td>
                <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= booking.email %></td>
                <td class="whitespace-nowrap px-4 py-2">
                <%if booking.status == "pending"%>
                  <strong
                    class="rounded bg-amber-100 px-3 py-1.5 text-xs font-medium text-amber-700"
                  >
                    <%= booking.status %>
                  </strong>
                <%elsif booking.status == "confirmed"%>
                  <strong
                    class="rounded bg-green-100 px-3 py-1.5 text-xs font-medium text-green-700"
                  >
                    <%= booking.status %>
                  </strong>

                <%else %>
                  <strong
                    class="rounded bg-red-100 px-3 py-1.5 text-xs font-medium text-red-700"
                  >
                    <%= booking.status %>
                  </strong>
                <% end %>
                </td>
                <td class="whitespace-nowrap px-4 py-2">
                  <a href="<%= booking_path(booking) %>" class="text-sm font-medium text-blue-600 hover:underline">
                    View
                  </a>
                </td>
              </tr>
        <% end %>
      </ul>
      </tbody>
    </table>
  </div>
  <a href="<%= new_booking_path %>" class="inline-block my-4 rounded border bg-teal-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-teal-600 focus:outline-none focus:ring active:text-teal-500 hover:cursor-pointer">Add a booking</a>
</div>
