  <%= simple_form_for @booking, class: "#{'text-white' if current_page?(new_booking_path)}" do |f| %>
    <%= f.input :last_name, label: "Nom", label_html: { class:"text-white text-base sm:text-xl"}, input_html: { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"}, placeholder: "Nom" %>
    <%= f.input :first_name, label: "Prénom", label_html: { class:"text-white text-base sm:text-xl"}, input_html: { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"}, placeholder: "Prénom" %>
    <%= f.input :email, label: "Email", label_html: { class:"text-white text-base sm:text-xl"}, input_html: { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"}, placeholder: "prenom.nom@gmail.com" %>
    <%= f.input :phone, label: "Téléphone", label_html: { class:"text-white text-base sm:text-xl"}, input_html: { class: "my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"}, placeholder: "0606060606" %>
    <%= f.input :people, label: "Nombre de couverts", label_html: { class:"text-white text-base sm:text-xl"}, collection: (1..20), input_html: { class: "my-2 px-6 mt-1 w-32  flex flex-col rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"} %>
    <%= f.input :date, placeholder: @booking.starts_at,label: "Date", label_html: { class:"text-white text-base sm:text-xl"}, as: :string, input_html: { class: "newDateTime my-2 mt-1 w-full rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-lg" }%>
    <%= f.input :starts_at, label: "Horaire", label_html: { class:"text-white text-base sm:text-xl"}, collection: ["19:00", "19:15", "19:30", "19:45", "20:00", "20:15", "20:30", "20:45", "21:00", "21:15", "21:30"], input_html: { class: "time my-2 mt-1 px-6 w-32 flex flex-col rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl" }%>
    <%= f.input :comment, :as => :text, label: "Commentaires (régimes alimentaires, allergies...)", label_html: { class:"text-white text-base sm:text-xl"}, input_html: { class: "my-10 mt-1 w-full h-36 rounded-md border-gray-200 shadow-sm text-gray-900 text-base sm:text-xl"} %>
    <%= f.button :submit, value: "Valider", class: "inline-block px-12 py-3 mb-2 text-base sm:text-xl font-medium text-white border border-none rounded bg-pink-pastel focus:outline-none focus:ring hover:cursor-pointer" %>
  <% end %>
